# Test Environment Configuration
# Database Configuration
POSTGRES_HOST=postgres-test
POSTGRES_PORT=5432
POSTGRES_DB=lastwar_test
POSTGRES_USER=test_user
POSTGRES_PASSWORD=test_password
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres-test:5432/lastwar_test
SPRING_DATASOURCE_USERNAME=test_user
SPRING_DATASOURCE_PASSWORD=test_password

# Spring Boot Configuration
SPRING_PROFILES_ACTIVE=test
SPRING_JPA_HIBERNATE_DDL_AUTO=create-drop
SPRING_JPA_SHOW_SQL=true
SPRING_JPA_PROPERTIES_HIBERNATE_FORMAT_SQL=true
SPRING_JPA_PROPERTIES_HIBERNATE_USE_SQL_COMMENTS=true

# Logging Configuration
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_MOSCATO_GAME_LASTWAR=DEBUG
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_WEB=DEBUG
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_SECURITY=DEBUG
LOGGING_LEVEL_ORG_HIBERNATE_SQL=DEBUG
LOGGING_LEVEL_ORG_HIBERNATE_TYPE=TRACE

# API Configuration
API_HOST=lastwar-api-test
API_PORT=8080
API_BASE_URL=http://lastwar-api-test:8080

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://lastwar-api-test:8080
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=test-secret-key-for-testing-only-do-not-use-in-production
NODE_ENV=test

# Feature Flags for Testing
ENABLE_DEBUG_MODE=true
ENABLE_TEST_DATA_SEEDING=true
ENABLE_DETAILED_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

# Test Data Configuration
TEST_DATA_CLEANUP_ENABLED=true
TEST_DATA_SEED_ON_STARTUP=true
TEST_DATABASE_RESET_ON_STARTUP=false

# Cache Configuration (Disabled for Testing)
SPRING_CACHE_TYPE=none
REDIS_ENABLED=false

# Security Configuration (Relaxed for Testing)
CORS_ALLOWED_ORIGINS=http://localhost:3001,http://lastwar-www-test:3000
CSRF_ENABLED=false

# Health Check Configuration
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=always